pipeline {
    agent any

    stages {
        stage('fetch code') {
            steps {
                git 'https://github.com/Vinayak341/vinay.git'
            }
        }
        stage('install') {
            steps {
                sh 'sudo apt install apache2 -y'
            }
        }
        stage('deploy') {
            steps {
                sh 'sudo cp -R * /var/www/html/'
            }
        }
      
  }
}
